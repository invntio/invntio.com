---
import Container from "../components/Container.astro";
---

<div id="contact-us" class="relative">
    <div
        aria-hidden="true"
        class="absolute -z-10 inset-0 grid grid-cols-2 -space-x-96 opacity-40 dark:opacity-20"
    >
        <div
            class="blur-[106px] h-56 bg-gradient-to-br from-primary dark:to-purple-400 dark:from-blue-700"
        >
        </div>
        <div
            class="blur-[106px] h-32 bg-gradient-to-r dark:from-cyan-400 to-sky-300 dark:to-indigo-600"
        >
        </div>
    </div>
    <Container>
        <div class="relative">
            <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
                <h2
                    class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl"
                >
                    Contact us
                </h2>
                <p class="text-center text-xl text-gray-600 dark:text-gray-300">
                    Got questions or need assistance? Reach out to us today and
                    let our team help you achieve your goals.
                </p>
            </div>
        </div>
        <div class="flex mt-12 w-full justify-center align-top">
            <form
                action="https://api.web3forms.com/submit"
                method="POST"
                class="flex flex-col w-full md:w-2/3 px-8 py-8 border border-gray-200 dark:border-gray-700 rounded-3xl bg-white dark:bg-gray-800 shadow-lg"
            >
                <input
                    type="hidden"
                    name="access_key"
                    value="50248df4-7ae0-46bb-9a9d-47b24d889d3f"
                />

                <div class="grid gap-6 md:grid-cols-2">
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                            for="grid-first-name"
                        >
                            First Name
                        </label>
                        <input
                            class="mt-1 block w-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg py-2 px-4 focus:ring-primary focus:border-primary"
                            id="grid-first-name"
                            type="text"
                            name="first_name"
                            placeholder="Jane"
                            required
                        />
                    </div>
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                            for="grid-last-name"
                        >
                            Last Name
                        </label>
                        <input
                            class="mt-1 block w-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg py-2 px-4 focus:ring-primary focus:border-primary"
                            id="grid-last-name"
                            type="text"
                            name="last_name"
                            placeholder="Doe"
                        />
                    </div>
                </div>

                <div class="mt-6">
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        for="grid-email"
                    >
                        Email
                    </label>
                    <input
                        class="mt-1 block w-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg py-2 px-4 focus:ring-primary focus:border-primary"
                        id="grid-email"
                        type="email"
                        name="email"
                        placeholder="example@mail.com"
                        required
                    />
                </div>

                <div class="mt-6">
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        for="grid-subject"
                    >
                        Subject
                    </label>
                    <input
                        class="mt-1 block w-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg py-2 px-4 focus:ring-primary focus:border-primary"
                        id="grid-subject"
                        type="text"
                        name="subject"
                        placeholder="Interested in Pricing for Software Development"
                    />
                </div>

                <div class="mt-6">
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        for="grid-message"
                    >
                        Message
                    </label>
                    <textarea
                        class="mt-1 block w-full bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg py-2 px-4 focus:ring-primary focus:border-primary"
                        id="grid-message"
                        name="message"
                        rows="4"
                        placeholder="Tell us how to help you"
                    ></textarea>
                </div>

                <div class="mt-6 flex justify-center w-auto">
                    <div class="h-captcha" data-captcha="true"></div>
                </div>

                <div class="mt-6 flex justify-center">
                    <button
                        type="submit"
                        class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium text-white bg-primary rounded-lg hover:bg-primary-dark focus:ring-4 focus:ring-primary focus:ring-opacity-50"
                    >
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </Container>
</div>


<!-- Required for hCaptcha -->
<script src="https://web3forms.com/client/script.js" async defer></script>
